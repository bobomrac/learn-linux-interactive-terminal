#!/bin/bash
clear
cd
echo "=== File Management - Intermediate Level ==="
echo "This guide will teach you more advanced file management techniques, including file compression, archiving, searching, and syncing."
echo ""

# CHAPTER 1: FILE COMPRESSION AND ARCHIVING
echo "=== CHAPTER 1: FILE COMPRESSION AND ARCHIVING ==="
echo "Let's start by learning how to compress and archive files."
echo ""

# Step 1: Create a directory for practice
echo "Step 1: Create a directory for practice."
echo "Use the 'mkdir' command to create a directory named 'practice_files'."
echo ""
read -p "Write the command & press Enter: "
eval "mkdir practice_files"
echo ""
echo "Directory 'practice_files' has been created!"
echo ""

# Step 2: Create sample files
echo "Step 2: Create sample files."
echo "Let's create three sample files inside the 'practice_files' directory."
echo "Run the following commands:"
echo "'touch practice_files/file1.txt'"
echo "'touch practice_files/file2.txt'"
echo "'touch practice_files/file3.txt'"
echo ""
read -p "Write the commands & press Enter: "
eval "touch practice_files/file1.txt practice_files/file2.txt practice_files/file3.txt"
echo ""
echo "Three sample files have been created in the 'practice_files' directory."
echo ""
read -p "Press Enter to continue."
echo ""

# Step 3: Compress files using gzip
echo "Step 3: Compress files using gzip."
echo "The 'gzip' command is used to compress files. Let's compress 'file1.txt'."
echo "Run the command: 'gzip practice_files/file1.txt'."
echo ""
read -p "Write the command & press Enter: "
eval "gzip practice_files/file1.txt"
echo ""
echo "The file 'file1.txt' has been compressed and renamed to 'file1.txt.gz'."
echo "Use 'ls practice_files/' to confirm."
echo ""
read -p "Write the command & press Enter: "
eval "ls practice_files/"
echo ""
echo "You should see 'file1.txt.gz' in the output."
echo ""
read -p "Press Enter to continue."
echo ""

# Step 4: Decompress files using gunzip
echo "Step 4: Decompress files using gunzip."
echo "The 'gunzip' command is used to decompress files. Let's decompress 'file1.txt.gz'."
echo "Run the command: 'gunzip practice_files/file1.txt.gz'."
echo ""
read -p "Write the command & press Enter: "
eval "gunzip practice_files/file1.txt.gz"
echo ""
echo "The file 'file1.txt.gz' has been decompressed back to 'file1.txt'."
echo "Use 'ls practice_files/' to confirm."
echo ""
read -p "Write the command & press Enter: "
eval "ls practice_files/"
echo ""
echo "You should see 'file1.txt' in the output."
echo ""
read -p "Press Enter to continue."
echo ""

# Step 5: Archive files using tar
echo "Step 5: Archive files using tar."
echo "The 'tar' command is used to create archives. Let's create an archive of the 'practice_files' directory."
echo "Run the command: 'tar -czvf practice_files.tar.gz practice_files/'."
echo "The options used are:"
echo "-c: Create a new archive."
echo "-z: Compress the archive using gzip."
echo "-v: Verbose output (show progress)."
echo "-f: Specify the archive file name."
echo ""
read -p "Write the command & press Enter: "
eval "tar -czvf practice_files.tar.gz practice_files/"
echo ""
echo "The archive 'practice_files.tar.gz' has been created."
echo "Use 'ls' to confirm."
echo ""
read -p "Write the command & press Enter: "
eval "ls"
echo ""
echo "You should see 'practice_files.tar.gz' in the output."
echo ""
read -p "Press Enter to continue."
echo ""

# Step 6: Extract files from a tar archive
echo "Step 6: Extract files from a tar archive."
echo "The 'tar' command can also be used to extract files from an archive."
echo "Run the command: 'tar -xzvf practice_files.tar.gz'."
echo "The options used are:"
echo "-x: Extract files from an archive."
echo "-z: Decompress the archive using gzip."
echo "-v: Verbose output (show progress)."
echo "-f: Specify the archive file name."
echo ""
read -p "Write the command & press Enter: "
eval "tar -xzvf practice_files.tar.gz"
echo ""
echo "The files have been extracted from the archive."
echo "Use 'ls practice_files/' to confirm."
echo ""
read -p "Write the command & press Enter: "
eval "ls practice_files/"
echo ""
echo "You should see the original files in the 'practice_files' directory."
echo ""
read -p "Press Enter to continue."
echo ""

# CHAPTER 2: FILE SEARCHING AND SYNCING
clear
echo "=== CHAPTER 2: FILE SEARCHING AND SYNCING ==="
echo "Now let's learn how to search for files and sync files between directories."
echo ""

# Step 7: Search for files using find
echo "Step 7: Search for files using find."
echo "The 'find' command is used to search for files and directories. Let's search for all '.txt' files in the 'practice_files' directory."
echo "Run the command: 'find practice_files/ -name "*.txt"'."
echo ""
read -p "Write the command & press Enter: "
eval "find practice_files/ -name '*.txt'"
echo ""
echo "The command lists all '.txt' files in the 'practice_files' directory."
echo ""
read -p "Press Enter to continue."
echo ""

# Step 8: Sync files using rsync
echo "Step 8: Sync files using rsync."
echo "The 'rsync' command is used to sync files and directories between locations. Let's sync the 'practice_files' directory to a new directory named 'backup_files'."
echo "Run the command: 'rsync -av practice_files/ backup_files/'."
echo "The options used are:"
echo "-a: Archive mode (preserves permissions, timestamps, etc.)."
echo "-v: Verbose output (show progress)."
echo ""
read -p "Write the command & press Enter: "
eval "rsync -av practice_files/ backup_files/"
echo ""
echo "The 'practice_files' directory has been synced to 'backup_files'."
echo "Use 'ls backup_files/' to confirm."
echo ""
read -p "Write the command & press Enter: "
eval "ls backup_files/"
echo ""
echo "You should see the same files in the 'backup_files' directory."
echo ""
read -p "Press Enter to continue."
echo ""

# CONCLUSION
echo "=== CONGRATULATIONS! ==="
echo "You've completed the intermediate level of file management!"
echo "You've learned how to compress and archive files, search for files, and sync directories."
echo ""
read -p "Press Enter to return to the main menu."
show_main_menu